{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src"
  },
  "package": {
    "productName": "benjh-rmm",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "all": false,
        "open": true,
        "scope": [
          {
            "name": "open-url",
            "cmd": "open",
            "args": true
          }
        ]
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.example.rmmtray",
      "icon": [
        "icons/icon.ico",
        "icons/icon.png"
      ]
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "menuOnLeftClick": true
    },
    "windows": [
      {
        "title": "RMM Agent Settings",
        "width": 650,
        "height": 750,
        "resizable": true,
        "visible": false,
        "center": true,
        "label": "main"
      }
    ]
  }
}

