{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "benjh-rmm",
  "version": "0.2.0",
  "identifier": "com.example.rmmtray",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "label": "status",
        "title": "RMM Agent - Status",
        "url": "index.html",
        "width": 550,
        "height": 500,
        "visible": false,
        "center": true,
        "resizable": true
      },
      {
        "label": "settings",
        "title": "RMM Agent - Settings",
        "url": "settings.html",
        "width": 500,
        "height": 400,
        "visible": false,
        "center": true,
        "resizable": true
      },
      {
        "label": "logs",
        "title": "RMM Agent - Logs",
        "url": "logs.html",
        "width": 700,
        "height": 500,
        "visible": false,
        "center": true,
        "resizable": true
      },
      {
        "label": "updates",
        "title": "RMM Agent - Updates",
        "url": "updates.html",
        "width": 450,
        "height": 350,
        "visible": false,
        "center": true,
        "resizable": false
      },
      {
        "label": "enrollment",
        "title": "RMM Agent - Awaiting Approval",
        "url": "enrollment.html",
        "width": 400,
        "height": 300,
        "visible": false,
        "center": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "menuOnLeftClick": true
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
      "wix": {
        "upgradeCode": "a1b2c3d4-e5f6-7890-abcd-ef1234567890"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
