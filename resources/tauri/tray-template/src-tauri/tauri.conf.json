{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src"
  },
  "package": {
    "productName": "benjh-rmm",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "all": false,
        "open": "^(https?://.*|file://.*)$",
        "scope": [
          {
            "name": "open-url",
            "cmd": "open",
            "args": true
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.example.rmmtray"
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "menuOnLeftClick": true
    },
    "windows": [
      {
        "title": "benjh-rmm",
        "visible": false
      }
    ]
  }
}

