{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src"
  },
  "package": {
    "productName": "benjh-rmm",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "all": false,
        "open": true,
        "scope": [
          {
            "name": "open-url",
            "cmd": "open",
            "args": true
          }
        ]
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.example.rmmtray",
      "icon": [
        "icons/icon.ico",
        "icons/icon.png"
      ]
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "menuOnLeftClick": true
    },
    "windows": [
      {
        "label": "status",
        "title": "RMM Agent - Status",
        "url": "index.html",
        "width": 550,
        "height": 500,
        "visible": false,
        "center": true,
        "resizable": true
      },
      {
        "label": "settings",
        "title": "RMM Agent - Settings",
        "url": "settings.html",
        "width": 500,
        "height": 400,
        "visible": false,
        "center": true,
        "resizable": true
      },
      {
        "label": "logs",
        "title": "RMM Agent - Logs",
        "url": "logs.html",
        "width": 700,
        "height": 500,
        "visible": false,
        "center": true,
        "resizable": true
      },
      {
        "label": "updates",
        "title": "RMM Agent - Updates",
        "url": "updates.html",
        "width": 450,
        "height": 350,
        "visible": false,
        "center": true,
        "resizable": false
      },
      {
        "label": "enrollment",
        "title": "RMM Agent - Awaiting Approval",
        "url": "enrollment.html",
        "width": 400,
        "height": 300,
        "visible": false,
        "center": true,
        "resizable": false
      }
    ]
  }
}

